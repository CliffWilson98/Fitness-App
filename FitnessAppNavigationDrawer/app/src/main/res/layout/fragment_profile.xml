<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/userPhoto"
        android:layout_width="370dp"
        android:layout_height="100dp"
        android:adjustViewBounds="false"
        android:contentDescription="@string/profile_user_photo"
        android:padding="10dp"
        app:srcCompat="@mipmap/u_fit_logo_transparent" />

    <EditText
        android:id="@+id/userName_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/profile_user_name"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/profile_user_name"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:text="@string/profile_bio"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorDarkBlue"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"/>

        <TableRow
            android:background="@color/colorPrimary"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:text="@string/profile_age"
                android:textSize="18sp"
                android:textStyle="bold"
                android:width="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1" />

            <EditText
                android:id="@+id/age_text_view"
                android:textSize="24sp"
                android:width="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:background="@color/colorPrimary"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:text="@string/profile_gender"
                android:textSize="18sp"
                android:textStyle="bold"
                android:width="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1" />

            <EditText
                android:id="@+id/gender_text_view"
                android:textSize="24sp"
                android:width="200dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:background="@color/colorPrimary"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:text="@string/profile_height"
                android:textSize="18sp"
                android:textStyle="bold"
                android:width="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1" />

            <EditText
                android:id="@+id/height_text_view"
                android:textSize="24sp"
                android:width="200dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:background="@color/colorPrimary"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:text="@string/profile_weight"
                android:textSize="18sp"
                android:textStyle="bold"
                android:width="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1" />

            <EditText
                android:id="@+id/weight_text_view"
                android:textSize="24sp"
                android:width="200dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorSilver"
        android:text="Submit"
        android:textStyle="bold" />


</LinearLayout>